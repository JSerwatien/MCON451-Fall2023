                                    <RadzenSeriesDataLabels Visible="@false"  />
                                </RadzenLineSeries>
                            }
                            <RadzenCategoryAxis Padding="10" Formatter="@FormatAsDate" />
                            <RadzenLegend Visible="false" Position="LegendPosition.Bottom"/>
                            <RadzenValueAxis Formatter="@FormatAsUSD" Visible="true">
                                <RadzenGridLines Visible="true" />
                                <RadzenAxisTitle Text="Revenue in USD" />
                            </RadzenValueAxis>
                        </RadzenChart>
                    </div>
                </div>
            </div>
            <div class="card-body" style="height:70px">
                <p class="text-sm "> (<span class="font-weight-bolder">Top 5 Stores</span>) @String.Join(",", PageModel.MonthlySalesByStore.Select(x => x.StringValue).Distinct().ToList()). </p>
